        <activity
            android:name=".button3_SearchForClubs.SearchForClubsScreen"
            android:exported="false"
            android:label="@string/title_activity_searc_for_clubs_screen"
            android:theme="@style/Theme.ScoccerApplication" />
        <activity
            android:name=".button2_SearchForClubsByLeague.SearchForClubsByLeagueScreen"
            android:exported="false"
            android:label="@string/title_activity_search_for_clubs_by_league_screen"
            android:theme="@style/Theme.ScoccerApplication" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ScoccerApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>