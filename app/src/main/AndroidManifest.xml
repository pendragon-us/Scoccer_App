<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScoccerApplication"
        tools:targetApi="31">
        <activity
            android:name=".button_4.ButtonFourScreen"
            android:exported="false"
            android:label="@string/title_activity_button_four_screen"
            android:theme="@style/Theme.ScoccerApplication" />
        <activity
            android:name=".SearchJearsyScreen"
            android:exported="false"
            android:label="@string/title_activity_search_jearsy_screen"
            android:theme="@style/Theme.ScoccerApplication" />
        <activity
            android:name=".button4_SearchForJerseys.SearchForJerseyScreen"
